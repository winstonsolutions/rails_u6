<!-- app/views/customers/index.html.erb -->
<div class="customers-container">
  <header class="page-header">
    <h1 class="page-title">All Customers</h1>
    <div class="filter-actions">
      <%= link_to customers_alphabetized_path, class: 'btn btn-primary' do %>
        <i class="fas fa-sort-alpha-down"></i> Alphabetized
      <% end %>
      <%= link_to customers_missing_email_path, class: 'btn btn-warning' do %>
        <i class="fas fa-envelope"></i> Missing Email
      <% end %>
    </div>
  </header>

  <% if @customers.any? %>
    <div class="customer-grid">
      <%= render partial: 'customer', collection: @customers %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No customers found.</p>
      <%= link_to 'Add Customer', new_customer_path, class: 'btn btn-success' if defined?(new_customer_path) %>
    </div>
  <% end %>
</div>